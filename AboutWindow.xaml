<Window x:Class="MWL4.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MWL4"
        mc:Ignorable="d"
        Title="About"
        Width="518"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False" Height="266">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="DICOM Modality Worklist Tester" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="1" Text="A tool to test or simulate Dicom Worklist as a SCU" Margin="0,5,0,0" HorizontalAlignment="Center"/>


        <TextBlock Grid.Row="4" Margin="0,2,0,114" HorizontalAlignment="Center">
            <Hyperlink NavigateUri="https://github.com/droidgren/DMWLT4" RequestNavigate="Hyperlink_RequestNavigate">
                https://github.com/droidgren/DMWLT4
            </Hyperlink>
        </TextBlock>

        <StackPanel Margin="264,0,0,20" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <TextBlock Text="{Binding Company}" d:Text="Vastra Gotalandsregionen" HorizontalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding Copyright}" d:Text="Copyright Anders Dahlgren 2025"/>
        </StackPanel>

        <Button Grid.Row="5" Content="OK" Width="75" Height="23" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Ok_Click" IsDefault="true" IsCancel="true" Margin="0,15,0,0"/>
        <Image Source="/VGR.png" Width="162" Opacity="0.75" HorizontalAlignment="Left" Margin="31,0,0,20" Grid.Row="4" VerticalAlignment="Bottom" Height="47"/>
        <TextBlock d:Text="Version 1.0.0.0" Text="{Binding Version}" Margin="0,27,0,75" HorizontalAlignment="Center" Grid.Row="4"/>
    </Grid>
</Window>