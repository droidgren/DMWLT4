<Window x:Class="MWL4.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:DMWLT4.Properties"
        Title="Settings"
        Height="154"
        Width="325"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top">
            <StackPanel.Resources>
                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="0,0,0,15"/>
                </Style>
            </StackPanel.Resources>
            <CheckBox x:Name="LogDimseDatasets" 
                      Content="Log DIMSE Datasets"
                      IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=Client_LogDimseDatasets, Mode=TwoWay}"/>
            <CheckBox x:Name="LogDataPDUs" 
                      Content="Log Data PDUs"
                      IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=Client_LogDataPDUs, Mode=TwoWay}"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="Close" Click="CloseButton_Click" Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>